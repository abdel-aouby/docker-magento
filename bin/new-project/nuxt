#!/bin/sh

. bin/variables

# Remove Frontend folder
${DOCKER_BIN_DIRECTORY}/helpers/remove-frontend-folder

# Create bind mounted folders
${DOCKER_BIN_DIRECTORY}/helpers/create-bind-mounted-folders

# Start containers
${DOCKER_BIN_DIRECTORY}/compose/up

cd ${DOCKER_DIRECTORY}

# Init project
docker-compose exec node sh -c "cd /home/node && \
if [ -d temp ]; then rm -rf temp; fi && \
mkdir temp && \
cd temp && \
yarn create nuxt-app frontend && \
mv /home/node/temp/frontend/* /home/node/frontend && \
rm -rf /home/node/temp"

cd ${APP_DIRECTORY}
